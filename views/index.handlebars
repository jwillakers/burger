<h1>Eat-Da-Burger</h1>

<div id="burger-display">

<div id="add-burger">
  <div id="input">
    
    <form class="create-update-form" action="burgers/create" method="POST">

      <div class="form-group">
        <label for="ca">Add a Burger:</label>
        <input type="text" id="ca" name="burger_name" <input type="text" name="fname" placeholder="Name Your Burger">
         <button id="add-burger-button" type="submit">Add Burger</button>
      </div>
      
    </form>
  </div>
</div>

  <div id="not-eaten">
    <h2>Burgers that have not been devoured</h2>
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <p>
            {{this.burger_name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button id ="type="submit">Devour</button>
            </form>
          </p>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <img id="pic" src="https://www.burger21.com/wp-content/themes/burger21/images/bacon-cheesy-burger.png">

  <div id="eaten">
    <h2>Burgers that have been devoured</h2>
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
              <button type="submit">Upchuck It Up</button>
            </form>
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>


